<!DOCTYPE html>
<html>

{{> head }}

<body>
    <div class="navi-wrapper">
        <div class="navi-wrapper-content">
            {{> logo }}
            <div class="primary-list">
                <h3>Records</h3>
                <ul>
                    {{#each module.records}}
                        <li>
                            <a href="{{name}}.html">{{name}}</a>
                        </li>
                    {{/each}}
                </ul>
            </div>
            <div class="ui divider"></div>
            {{> currentModule }}
            {{> allModules }}
        </div>
    </div>
    
     <div class="ui vertical sidebar menu">
        <div class="navi-wrapper-sidebar">
            <div class="navi-wrapper-content">
                {{> logo }}
                <div class="primary-list">
                    <h3>Records</h3>
                    <ul>
                        {{#each module.records}}
                            <li>
                                <a href="{{name}}.html">{{name}}</a>
                            </li>
                        {{/each}}
                    </ul>
                </div>
                <div class="ui divider"></div>
                {{> currentModule }}
                {{> allModules }}
            </div>
        </div>
    </div>

    <div class="content-wrapper pusher">
        {{> mobMenu }}
        <div class="main-wrapper">
            <h1>Record : <span class="records">{{ record.name }}</span></h1>

            <p>{{{ record.description }}}</p>
            <div class="constants">
                {{#if record.fields}}
                    {{#record}}
                        <h2>Fields</h2>
                            {{> fields }}
                    {{/record}}
                {{/if}}
            </div>
        </div>
    </div>
</body>

{{> footer }}
